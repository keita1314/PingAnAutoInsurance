<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#FFFFFF" >
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
       <include android:id="@+id/top_bar" 
        	layout="@layout/top_bar"/>
       <TextView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:text="事故第三方人身伤亡"
           android:textColor="#000000"/>
       <LinearLayout 
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
       <TextView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textColor="#000000"
           android:text="伤:"/>
        <EditText
           android:id="@+id/hurt_num"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:numeric="integer"
           android:hint="0"/>
         <TextView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textColor="#000000"
           android:text="死:"/>
        <EditText
           android:id="@+id/dead_num"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:numeric="integer"
           android:hint="0"/>
          </LinearLayout>
          <TextView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textColor="#000000"
           android:text="出险原因"/>
          <com.keita.pinganautoinsurance.mywidget.ComboEditText
              android:id="@+id/case_reason"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              />
          <TextView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textColor="#000000"
           android:text="事故原因"/>
          <com.keita.pinganautoinsurance.mywidget.ComboEditText
              android:id="@+id/accident_reason"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              />
          <TextView 
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:textColor="#000000"
           android:text="发生事故经过情况描述"/>
          <EditText
              android:id="@+id/accident_detail"
              android:layout_width="fill_parent"
              android:layout_height="100dp"
              android:background="@drawable/edit_background"/>
          <LinearLayout 
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
          <Button 
              android:id="@+id/record_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
           	
              android:text="开始录音"/>
          <Button 
              android:id="@+id/record_stop_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
            
              android:text="停止录音"/>
          </LinearLayout>
          <Button 
              android:id="@+id/record_play_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="播放录音"/>
          <Button 
              android:id="@+id/save_case_btn"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="保存案件"/>
    </LinearLayout>
</ScrollView>

