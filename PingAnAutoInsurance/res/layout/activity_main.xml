<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
	<include android:id="@+id/top_bar" 
        	layout="@layout/top_bar"/>
	<LinearLayout
	    android:layout_below="@id/top_bar" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	<Button 
	    android:id="@+id/create_insurance_policy_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="开启理赔案件"/>
	<Button 
	    android:id="@+id/all_insurance_policy_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="查看理赔案件"/>
	<Button 
	    android:id="@+id/picture_repo_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="照片库 "/>
	<Button 
	    android:id="@+id/record_repo_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="录音库 "/>
	<Button 
	    android:id="@+id/situation_template_btn"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="情景模版"/>
	</LinearLayout>
</RelativeLayout>