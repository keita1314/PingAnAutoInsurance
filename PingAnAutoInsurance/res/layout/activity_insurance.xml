<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="报案号"
        />
    <EditText 
        android:id="@+id/case_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="被保险人"
        />
    <EditText 
        android:id="@+id/case_reporter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="驾驶员"
        />
    <EditText 
        android:id="@+id/case_driver"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
     <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="被保险人与驾驶员关系"
        />
    <Spinner
        android:id="@+id/relationship" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="被保险人电话"
        />
    <EditText 
        android:id="@+id/case_buyer_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
      <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="驾驶员电话"
        />
    <EditText 
        android:id="@+id/case_driver_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="驾驶证号"
        />
    <EditText 
        android:id="@+id/case_driver_licence"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车牌号码"
        />
    <EditText 
        android:id="@+id/case_car_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="车型"
        />
    <EditText 
        android:id="@+id/case_car_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VIN码"
        />
    <EditText 
        android:id="@+id/case_car_type"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>
    
</LinearLayout>
</ScrollView>